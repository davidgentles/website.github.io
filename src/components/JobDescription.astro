---
interface Props {
  companyName: string;
  companyDescription: string;
  companyLogo: string;
  positionTitle: string;
  positionDescription: string;
  start: string;
  end: string;
  keyContributions: string[];
}

const {
  companyName,
  companyDescription,
  companyLogo,
  positionTitle,
  positionDescription,
  start,
  end,
  keyContributions,
} = Astro.props;
---

<div class="pb-10">
  <div class="pb-4">
    <div
      class="border border-aztec-600 bg-aztec-950 rounded-lg p-4 flex items-center"
    >
      <div class="mr-4 flex-none">
        <img src={companyLogo} alt={companyName} class="w-16 h-16 rounded-lg" />
      </div>
      <div>
        <h2 class="text-2xl text-white font-semibold">{companyName}</h2>
        <p class="text-aztec-100">{positionTitle}</p>
        <p class="text-aztec-500">{start} - {end}</p>
      </div>
    </div>
  </div>
  <p class="pb-4">{companyDescription}</p>
  <p class="pb-4">{positionDescription}</p>
  <h3 class="pb-1 text-white font-bold">Key Contributions:</h3>
  <ul class="list-outside list-disc pl-5">
    {
      keyContributions.map((contribution) => (
        <li class="pb-1">{contribution}</li>
      ))
    }
  </ul>
</div>
